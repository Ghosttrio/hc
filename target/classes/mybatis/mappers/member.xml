<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
      PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
   "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

	<!-- 파일의 Id(class 명)와 같은 -->
	<mapper namespace="mapper.member">
			
	<!-- 회원 정보를 저장할 resultMap을 정의한다,  -->
	<resultMap id="memberResult" type="MemberDTO">
			<result property="member_id" column="member_id" />
			<result property="member_pwd" column="member_pwd" />
			<result property="member_name" column="member_name" />
			<result property="member_email" column="member_email" />
			<result property="member_number" column="member_number" />
			<result property="joinDate" column="joinDate" />
			<result property="member_birth_y" column="member_birth_y" />
			<result property="member_birth_m" column="member_birth_m" />
			<result property="member_birth_d" column="member_birth_d" />
			<result property="member_gender" column="member_gender" />
			<result property="member_gender" column="member_grade" />
	</resultMap>	
	
	<!-- <![CDATA[
					SQl 비교 구문 넣을 때만  xml에 사용한다.
				]]>  -->
	
	<!-- 로그인 -->
	<select id="loginMember" resultType="memberDTO"  parameterType="memberDTO"  >
		    <!-- *resultType 나가는 return타입 과 같고, parameterType 들어오는 전달인자-->
				SELECT* 
				FROM MEMBER
				WHERE member_id = #{member_id}
				AND member_pwd = #{member_pwd}		
	</select>
	
	<!-- 회원가입 아이디 중복체크  -->
	<select id="checkMember" resultType="String" parameterType="String" >
				  SELECT decode(count(*),1, 'true', 0, 'false')
				  FROM MEMBER
				   WHERE member_id = #{_parameter}
	</select>
	
	<!-- 회원가입  -->
	<insert id="addMember"  parameterType="memberDTO">
			  INSERT
			  INTO MEMBER(member_id
			    						, member_pwd
			    						, member_name
			    						, member_email
			    						, member_number
			    						)
					    	values(#{member_id}
					    	,#{member_pwd}
					    	,#{member_name}
					    	,#{member_email}
					    	,#{member_number}
					    	)
  </insert>   
  
  	<!-- 마이페이지 회원 정보 출력 -->
	<select id="mainMypage"  resultType="memberDTO" parameterType="memberDTO"  >
		    <!-- *resultType 나가는 return타입 과 같고, parameterType 들어오는 전달인자-->
				SELECT* 
				FROM MEMBER
				WHERE member_id = #{member_id}
				AND member_name = #{member_name}
				AND member_email = #{member_email}		
				AND member_number = #{member_number}		
		</select>
  
<!--   마이페이지 회원 정보 수정 -->
	  <update id="updateMypage"  parameterType="memberDTO" >
	  				UPDATE 
	 						MEMBER
					SET 
					 member_pwd = #{member_pwd}
					, member_name = #{member_name} 
					, member_email = #{member_email} 
					, member_number = #{member_number} 
					, member_birth_y = #{member_birth_y} 
					, member_birth_m = #{member_birth_m} 
					, member_birth_d = #{member_birth_d} 
					, member_gender = #{member_gender} 
					, member_grade = #{member_grade} 
					WHERE
						member_id = #{member_id} 
	  </update>
	  
    <!-- 회원탈퇴 -->
	<delete id="delMember" parameterType="String">
			  <![CDATA[
					DELETE 
					FROM MEMBER
					WHERE member_id = #{_parameter}
				]]>    
	</delete>
	
  <!-- 관리자페이지 회원정보 -->
  <select id="listMember" parameterType="List" resultMap="List">
	          SELECT * 
	          FROM MEMBER
	          WHERE member_no = #{member_no}	
</select>


